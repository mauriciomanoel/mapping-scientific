@Article{Xu2016,
author="Xu, Zheng
and Mei, Lin
and Liu, Yunhuai
and Hu, Chuanping
and Chen, Lan",
title="Semantic enhanced cloud environment for surveillance data management using video structural description",
journal="Computing",
year="2016",
month="Jan",
