@article{LIU201768,
title = "Identification of key factors in consumers’ adoption behavior of intelligent medical terminals based on a hybrid modified MADM model for product improvement",
journal = "International Journal of Medical Informatics",
volume = "105",
pages = "68 - 82",
year = "2017",
issn = "1386-5056",
