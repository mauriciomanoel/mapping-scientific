@article{YOUTIE20171692,
title = "Institutionalization of international university research ventures",
journal = "Research Policy",
volume = "46",
number = "9",
pages = "1692 - 1705",
year = "2017",
issn = "0048-7333",
doi = "https://doi.org/10.1016/j.respol.2017.08.006",
