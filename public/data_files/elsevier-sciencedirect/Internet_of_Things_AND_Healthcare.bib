@article{JEDARI2017,
title = "A social-based watchdog system to detect selfish nodes in opportunistic mobile networks",
journal = "Future Generation Computer Systems",
year = "2017",
issn = "0167-739X",
doi = "https://doi.org/10.1016/j.future.2017.10.049",
