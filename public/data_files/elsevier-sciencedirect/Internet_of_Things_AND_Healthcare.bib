@article{CHEN2017,
title = "Verifiable keyword search for secure big data-based mobile healthcare networks with fine-grained authorization control",
journal = "Future Generation Computer Systems",
year = "2017",
issn = "0167-739X",
doi = "https://doi.org/10.1016/j.future.2017.10.022",
