@article{ALFARIS2017262,
title = "Intelligent homes’ technologies to optimize the energy performance for the net zero energy home",
journal = "Energy and Buildings",
volume = "153",
pages = "262 - 274",
year = "2017",
issn = "0378-7788",
doi = "https://doi.org/10.1016/j.enbuild.2017.07.089",
url = "http://www.sciencedirect.com/science/article/pii/S0378778817309477",
author = "Fadi AlFaris and Adel Juaidi and Francisco Manzano-Agugliaro",
keywords = "Smart home, Intelligent home, Home energy management system, Internet of things, KSA",
