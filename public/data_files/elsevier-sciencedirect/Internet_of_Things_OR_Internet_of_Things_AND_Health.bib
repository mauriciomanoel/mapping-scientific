@article{ALOI201774,
title = "Enabling IoT interoperability through opportunistic smartphone-based mobile gateways",
journal = "Journal of Network and Computer Applications",
volume = "81",
pages = "74 - 84",
year = "2017",
issn = "1084-8045",
doi = "https://doi.org/10.1016/j.jnca.2016.10.013",
url = "http://www.sciencedirect.com/science/article/pii/S1084804516302405",
