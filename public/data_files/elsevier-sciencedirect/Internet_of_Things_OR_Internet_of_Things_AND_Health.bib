@article{BAIG2018,
title = "Cloudy in guifi.net: Establishing and sustaining a community cloud as open commons",
journal = "Future Generation Computer Systems",
year = "2018",
issn = "0167-739X",
doi = "https://doi.org/10.1016/j.future.2017.12.017",
