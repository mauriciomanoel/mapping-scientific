journal = "Mathematical and Computer Modelling",
volume = "58",
number = "5",
pages = "1155 - 1174",
year = "2013",
note = "The Measurement of Undesirable Outputs: Models Development and Empirical Analyses and Advances in mobile, ubiquitous and cognitive computing",
