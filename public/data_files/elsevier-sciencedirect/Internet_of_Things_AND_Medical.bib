link_pdf="https://www.sciencedirect.com/science/article/pii/S1877050916305324/pdfft?md5=8959b249d373264cc504c5b8654d87aa&amp;pid=1-s2.0-S1877050916305324-main.pdf"
}
@article{NAEEM2017823,
title = "A new approach for image detection based on refined Bag of Words algorithm",
