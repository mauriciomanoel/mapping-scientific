@article{POLVERINI2017,
title = "Resource efficiency, privacy and security by design: A first experience on enterprise servers and data storage products triggered by a policy process",
journal = "Computers & Security",
year = "2017",
issn = "0167-4048",
doi = "https://doi.org/10.1016/j.cose.2017.12.001",
