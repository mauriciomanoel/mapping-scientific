link_pdf="https://www.sciencedirect.com/science/article/pii/S2212017316303851/pdfft?md5=aa65fa6959dad47821c2176df078119d&amp;pid=1-s2.0-S2212017316303851-main.pdf"
}
@article{BOSMAN201514,
