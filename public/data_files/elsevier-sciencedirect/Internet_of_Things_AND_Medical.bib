@article{GRAVINA201768,
title = "Multi-sensor fusion in body sensor networks: State-of-the-art and research challenges",
journal = "Information Fusion",
volume = "35",
pages = "68 - 80",
year = "2017",
issn = "1566-2535",
doi = "https://doi.org/10.1016/j.inffus.2016.09.005",
