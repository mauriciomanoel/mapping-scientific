@article{CHANG201828,
title = "Trends and research issues of mobile learning studies in nursing education: A review of academic publications from 1971 to 2016",
journal = "Computers & Education",
volume = "116",
pages = "28 - 48",
year = "2018",
issn = "0360-1315",
doi = "https://doi.org/10.1016/j.compedu.2017.09.001",
