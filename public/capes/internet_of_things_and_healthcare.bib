keywords = "Healthcare ; e-health ; Assisted living ; Middleware ; Management ; Policy enforcement ; Dynamic reconfiguration ; Event-based systems ; Pervasive computing ; Security ; Privacy ; Internet of things ; SBUS",
month = "December",
}

