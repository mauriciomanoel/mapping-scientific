}
@article{GONELLA2019456,
title = "Is technology optimism justified? A discussion towards a comprehensive narrative",
journal = "Journal of Cleaner Production",
volume = "223",
pages = "456 - 465",
year = "2019",
issn = "0959-6526",
doi = "https://doi.org/10.1016/j.jclepro.2019.03.126",
