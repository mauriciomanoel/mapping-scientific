title="Nurse Education Today",
doc="S0260691718310323",
link_pdf="https://www.sciencedirect.com/science/article/pii/S0260691718310323/pdfft?md5=10f2607ef239a406c56859c7724d138f&pid=1-s2.0-S0260691718310323-main.pdf"
}
