@article{WANG2017169,
title = "Ten questions concerning future buildings beyond zero energy and carbon neutrality",
journal = "Building and Environment",
volume = "119",
pages = "169 - 182",
year = "2017",
issn = "0360-1323",
doi = "https://doi.org/10.1016/j.buildenv.2017.04.006",
