@article{SHAO2016122,
title = "Capital Building for Urban Resilience: The Case of Reconstruction Planning of Kesennuma City, Miyagi Prefecture, Japan",
journal = "Procedia Environmental Sciences",
volume = "36",
pages = "122 - 129",
year = "2016",
note = "International Conference on Geographies of Health and Living in Cities: Making Cities Healthy for All",
