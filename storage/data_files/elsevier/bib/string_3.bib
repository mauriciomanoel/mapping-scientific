title="Expert Systems with Applications",
doc="S0957417416303797",
link_pdf="https://www.sciencedirect.com/science/article/pii/S0957417416303797/pdfft?md5=382c081e36817941ea0af90d850afe9a&pid=1-s2.0-S0957417416303797-main.pdf"
}
@article{HAMM2016319,
title = "Fall prevention intervention technologies: A conceptual framework and survey of the state of the art",
journal = "Journal of Biomedical Informatics",
volume = "59",
pages = "319 - 345",
year = "2016",
issn = "1532-0464",
doi = "https://doi.org/10.1016/j.jbi.2015.12.013",
