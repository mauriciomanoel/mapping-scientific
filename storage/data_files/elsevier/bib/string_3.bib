doc="S0190740920301420",
link_pdf="https://www.sciencedirect.com/science/article/pii/S0190740920301420/pdfft?md5=ba66406e2df220bcb13f4a30154b6dce&pid=1-s2.0-S0190740920301420-main.pdf"
