title="International Journal of Nursing Studies",
doc="S0020748906002604",
link_pdf="https://www.sciencedirect.com/science/article/pii/S0020748906002604/pdfft?md5=7632875324f6e3413ba432293fb092fa&pid=1-s2.0-S0020748906002604-main.pdf"
}
