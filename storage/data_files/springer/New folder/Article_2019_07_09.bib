@Article{Srp2010,
author="Srp, {\'A}.
and Vajda, F.",
title="Possible techniques and issues in fall detection using asynchronous temporal-contrast sensors",
journal="e {\&} i Elektrotechnik und Informationstechnik",
year="2010",
month="Aug",
day="01",
volume="127",
number="7",
