@InProceedings{10.1007/978-3-319-39943-0_41,
author="Coventry, Lynne
and Briggs, Pam",
editor="Zhou, Jia
and Salvendy, Gavriel",
title="Mobile Technology for Older Adults: Protector, Motivator or Threat?",
booktitle="Human Aspects of IT for the Aged Population. Design for Aging",
year="2016",
publisher="Springer International Publishing",
address="Cham",
pages="424--434",
abstract="New technologies offer an opportunity to improve the wellbeing and independence of older adults, but many of the potential benefits, have not yet been realised. Some technologies suggest a lifestyle of constant monitoring, controlling and nudging - transformations that could be perceived as threatening. To better understand older adult perceptions and attitudes to adoption of such systems, we describe a 3 week field trial of an application and view the results through the lens of protection motivation theory. Our participants identified a number of threats including not being able to live independently, fear of getting lost, being stigmatised and lack of privacy. Usability, accessibility, reliability, costs and usefulness all negatively impacted coping appraisal that would result in non-adoption, despite their stated intention to adopt the technology in the future.",
isbn="978-3-319-39943-0",
url_article="https://link.springer.com/chapter/10.1007/978-3-319-39943-0_41"
}
@InProceedings{10.1007/978-3-319-40093-8_54,
author="Kudo, Hiroko",
