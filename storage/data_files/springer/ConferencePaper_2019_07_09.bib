@InProceedings{10.1007/978-3-030-02686-8_65,
author="Rosero-Montalvo, Paul D.
and Batista, Vivian F. L{\'o}pez
and Rosero, Edwin A.
and Jaramillo, Edgar D.
and Caraguay, Jorge A.
and Pijal-Rojas, Jos{\'e}
